{
  "watch": ["src"],
  "ext": ".ts,.js,.json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "test/**/*"],
  "exec": "ts-node -r tsconfig-paths/register ./src/main.ts",
  "delay": "2000",
  "events": {
    "restart": "kill-port 3001",
    "crash": "kill-port 3001"
  },
  "signal": "SIGUSR2"
} 